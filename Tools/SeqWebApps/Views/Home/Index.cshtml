
@{
    Layout = null;
}
@inject IConfiguration _config

<!DOCTYPE html>
<style>
    .loading {
        display: none;
    }
    .changeIt {
        display: none;
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@_config["Title"]</title>
</head>
<body>

    <h1>@_config["Title"]</h1>
    <p>@_config["Description"]</p>
    <label id="promptInput">Input Text:</label>
    <br />
    <textarea type="text" id="txtName" cols="150" rows="20" style="width:100%"></textarea>
    <br />
    <label id="promptOutputTokenNum">The number of tokens to output in each step:</label>
    <select id="ddlOutputTokenNum">
        <option value="4">4</option>
        <option value="8" selected="selected">8</option>
        <option value="16">16</option>
        <option value="32">32</option>
        <option value="64">64</option>
        <option value="128">128</option>
    </select>

    <label id="promptRepeatPenalty">Penalty for repeat:</label>
    <select id="ddlRepeatPenalty">
        <option value="0" selected=@(_config["RepeatPenalty"] == "0")>0</option>
        <option value="1" selected=@(_config["RepeatPenalty"] == "1")>1</option>
        <option value="2" selected=@(_config["RepeatPenalty"] == "2")>2</option>
        <option value="3" selected=@(_config["RepeatPenalty"] == "3")>3</option>
        <option value="4" selected=@(_config["RepeatPenalty"] == "4")>4</option>
        <option value="5" selected=@(_config["RepeatPenalty"] == "5")>5</option>
        <option value="6" selected=@(_config["RepeatPenalty"] == "6")>6</option>
        <option value="7" selected=@(_config["RepeatPenalty"] == "7")>7</option>
        <option value="8" selected=@(_config["RepeatPenalty"] == "8")>8</option>
        <option value="9" selected=@(_config["RepeatPenalty"] == "9")>9</option>
    </select>


    <label id="promptContextSize">Context size:</label>
    <select id="ddlContextSize">
        <option value="128" selected=@(_config["ContextSize"] == "128")>128</option>
        <option value="256" selected=@(_config["ContextSize"] == "256")>256</option>
        <option value="384" selected=@(_config["ContextSize"] == "384")>384</option>
        <option value="512" selected=@(_config["ContextSize"] == "512")>512</option>
        <option value="768" selected=@(_config["ContextSize"] == "768")>768</option>
    </select>

    <label id="randomOutput">Random output text:</label>
    <input type="checkbox" id="cbRandomOutput" @(_config["Random"])/>


    <input type="button" id="btnGet" value="Generate Text" />
    <input type="button" id="btnCancel" value="Cancel" />

    <br />
    <div class="loading"><label id="statusText"></label></div>
    <label id="promptOutput">Output Text:</label>
    <br />
    <label id="outputText"></label>
    
    <div class="changeIt">
    <input type="button" id="btnNextBatch" value="Change it" />
    </div>

    <label hidden id="clientIP">Input Text:</label>
   

    <p>
        <input type="button" id="submitThumbUp" style="border:none;" value="👍" />
        <input type="button" id="submitThumbDown" style="border:none;" value="👎" />
    </p>

    <p>Powered by <a href="https://github.com/zhongkaifu/Seq2SeqSharp">Seq2SeqSharp</a></p>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

    <script type="application/javascript">
  function getIP(json) {
      $("#clientIP").html(json.ip);
  }
</script>

<script type="application/javascript" src="https://api.ipify.org?format=jsonp&callback=getIP"></script>


    <script type="text/javascript">
var rq = null;

        $(function () {
            $("#btnGet").click(function () {

                $("#submitThumbUp").attr("disabled", false);
                $("#submitThumbDown").attr("disabled", false);
                $("#clientIP").load()

                if (rq != null)
                {
                    rq.abort();
                }

                rq = $.ajax({
                    type: "POST",
                    url: "/Home/GenerateText",
                    data: {
                        "srcInput": $("#txtName").val(), "tgtInput": "", "num": $("#ddlOutputTokenNum").val(),
                        "random": $('#cbRandomOutput').is(':checked'), "repeatPenalty": $("#ddlRepeatPenalty").val(),
                        "contextSize": $("#ddlContextSize").val(), "clientIP": $("#clientIP").text(), 
                        "useSrcAsPrompt": $('#cbUseSrcAsPrompt').is(':checked')
                    },
                    beforeSend: function () {

                        $("#outputText").html("");
                        $("#statusText").html("Generating...");                    
                    },
                    success: function (response) {
                        $("#outputText").html(response.output);

                        if (response.output.endsWith("eos") == true || response.output.endsWith("EOS") == true)
                        {
                            $("#statusText").html("Done");                         
                        }


                        $("#outputText").load();
                        $("#btnNextBatch").trigger("click");

                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });


            $("#submitThumbUp").click(function () {

                rq = $.ajax({
                    type: "POST",
                    url: "/Home/SubmitFeedback",
                    data: {
                        "srcInput": $("#txtName").val(), "tgtInput": $("#outputText").text(),
                        "random": $('#cbRandomOutput').is(':checked'), "repeatPenalty": $("#ddlRepeatPenalty").val(),
                        "contextSize": $("#ddlContextSize").val(), "clientIP": $("#clientIP").text(),
                        "feedBackType": "1"
                    },
                    success: function (response) {

                        $("#submitThumbUp").attr("disabled", true);
                        $("#submitThumbDown").attr("disabled", true);
                    }
                });
            });


            $("#submitThumbDown").click(function () {

                rq = $.ajax({
                    type: "POST",
                    url: "/Home/SubmitFeedback",
                    data: {
                        "srcInput": $("#txtName").val(), "tgtInput": $("#outputText").text(),
                        "random": $('#cbRandomOutput').is(':checked'), "repeatPenalty": $("#ddlRepeatPenalty").val(),
                        "contextSize": $("#ddlContextSize").val(), "clientIP": $("#clientIP").text(),
                        "feedBackType": "0"
                    },
                    success: function (response) {

                        $("#submitThumbUp").attr("disabled", true);
                        $("#submitThumbDown").attr("disabled", true);
                    }
                });
            });

            $("#btnNextBatch").click(function () {

                $("#clientIP").load()


                rq = $.ajax({
                    type: "POST",
                    url: "/Home/GenerateText",
                    data: { "srcInput": $("#txtName").val(), "tgtInput": $("#outputText").text(), "num": $("#ddlOutputTokenNum").val(), 
                    "random": $('#cbRandomOutput').is(':checked'), "repeatPenalty": $("#ddlRepeatPenalty").val(), 
                    "contextSize": $("#ddlContextSize").val() , "clientIP": $("#clientIP").text(),
                    "useSrcAsPrompt": false
                    },
                    beforeSend: function () {
                    },
                    success: function (response) {

                        if (response.output == $("#outputText").text())
                        {
                            $("#statusText").html("Cancelled");
                        }
                        else
                        {
                            if (response.output.endsWith("eos") == true || response.output.endsWith("EOS") == true)
                            {
                                $("#statusText").html("Done");
                            }

                            $("#outputText").html(response.output);
                            $("#outputText").load();

                            if ($("#statusText").text() == "Generating...")
                            {
                               $("#btnNextBatch").trigger("click");
                            }
                            else
                            {
                                $("#statusText").html("Cancelled");
                            }
                         }
                    },
                    failure: function (response) {
                      
                    },
                    error: function (response) {
                        
                    }
                });


            $("#btnCancel").click(function () {
                $("#statusText").html("Cancelled");
                
                        if (rq != null) {
                            rq.abort();
                        }
            });
            });
        });
    </script>
</body>
</html>
